@model IEnumerable<ISFinalProject.Models.Barangay>;

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Barangay Citizens List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6"></div>
			<div class="col-6 text-end">
				<a asp-controller="Brgy" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> &nbsp; ADD INFORMATION
				</a>
			</div>
		</div>
		<table class="table table-border table-striped">
			<thead>
				<tr>
					<th>
						ID
					</th>
					<th>
						First Name
					</th>
					<th>
						Last Name
					</th>
					<th>
						Age
					</th>
					<th>
						Gender
					</th>
					<th>
						Civil Status
					</th>
					<th>
						House No.
					</th>
					<th>
						Occupation
					</th>
					<th>
						Annual Income
					</th>
					<th>
						Contact No.
					</th>
					<th>
						Gmail
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td>@obj.Id</td>
						<td>@obj.FirstName</td>
						<td>@obj.LastName</td>
						<td>@obj.Age</td>
						<td>@obj.Gender</td>
						<td>@obj.CivilStatus</td>
						<td>@obj.HouseNo</td>
						<td>@obj.Occupation</td>
						<td>@obj.annualIncome</td>
						<td>@obj.ContactNo</td>
						<td>@obj.Gmail</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Brgy" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>

								<a asp-controller="Brgy" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash-fill"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>