@model ISFinalProject.Models.Barangay;

<form method="post" asp-action="Delete" class="form">
    <input asp-for="Id" hidden />
    <p class="title">Citizen Information </p>
    <p class="message">All civil information that you provided are private. </p>
    <div class="flex">
        <label>
            <input type="text" class="input" asp-for="FirstName" disabled>
            <span>Firstname</span>
        </label>

        <label>
            <input type="text" class="input" asp-for="LastName" disabled>
            <span>Lastname</span>           
        </label>
    </div>

    <label>
        <span>Age</span>
        <input type="number" class="input" asp-for="Age" disabled>
    </label>

    <label>
        <input type="text" class="input" asp-for="Gender" disabled>
        <span>Gender</span>
    </label>

    <label>
        <input type="text" class="input" asp-for="CivilStatus" disabled>
        <span>Civil Status</span>
    </label>

    <label>
        <span>House No.</span>
        <input type="number" class="input" asp-for="HouseNo" disabled>
    </label>

    <label>
        <input type="text" class="input" asp-for="Occupation" disabled>
        <span>Occupation</span>
    </label>

    <label>
        <span>Annual Income</span>
        <input type="number" class="input" asp-for="annualIncome" disabled>
    </label>

    <p class="title">Citizen Contacts </p>
    <p class="message">All citizen contacts that you provided are private. </p>

    <label>
        <input type="text" class="input" asp-for="ContactNo" disabled>
        <span>Contact No.</span>
    </label>

    <label>
        <input type="email" class="input" asp-for="Gmail" placeholder="bsinfo2b@gmail.com" disabled>
        <span>Gmail</span>
    </label>

    <button type="submit" class="submit"> <i class="bi bi-trash-fill"></i> Delete</button>
</form>